<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="850.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.DashBoard">
    <children>
        <!-- Top BorderPane with Back Button and Title -->
        <BorderPane prefHeight="88.0" prefWidth="1000.0" style="-fx-background-color: #3f2b63;">
            <left>
                <Button fx:id="backBtn" mnemonicParsing="false" onAction="#GoBack" prefHeight="54.0" prefWidth="150.0" style="-fx-background-color: #3f2b63;" text="Back" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Bodoni MT" size="20.0" />
                    </font>
                </Button>
            </left>
            <center>
                <Label fx:id="TopLabel" prefHeight="47.0" prefWidth="363.0" text="Sales DashBoard" textFill="WHITE" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="Bodoni MT Bold" size="36.0" />
                    </font>
                </Label>
            </center>
        </BorderPane>

        <!-- ScrollPane to make the content scrollable -->
        <ScrollPane layoutX="0.0" layoutY="88.0" prefHeight="762.0" prefWidth="1000.0">
            <VBox spacing="20.0" alignment="CENTER">
                <!-- Location Selection Section -->
                <HBox spacing="10.0" alignment="CENTER">
                    <Label text="Select a Location to Explore :" textFill="BLACK">
                        <font>
                            <Font name="Bodoni MT Bold" size="22.0" />
                        </font>
                    </Label>
                    <ComboBox fx:id="locationComboBox" onAction="#PickLocation" prefWidth="150.0" promptText="All Locations" style="-fx-background-color: #ffffff;" />
                </HBox>

                <!-- Ticket Sales Chart -->
                <BarChart fx:id="TicketSaleTable" prefHeight="300.0" prefWidth="850.0" title="Ticket Sales">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </BarChart>

                <HBox spacing="20.0" alignment="CENTER">
                    <!-- Links & T-book Sales Chart -->
                    <BarChart fx:id="LinksTable" prefHeight="250.0" prefWidth="450.0" title="Links &amp; T-book Sales">
                        <xAxis>
                            <CategoryAxis side="BOTTOM" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis side="LEFT" />
                        </yAxis>
                    </BarChart>

                    <!-- Complaints per Day Chart -->
                    <BarChart fx:id="ComplaintsTable" prefHeight="250.0" prefWidth="450.0" title="Complaints per Day">
                        <xAxis>
                            <CategoryAxis side="BOTTOM" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis side="LEFT" />
                        </yAxis>
                    </BarChart>
                </HBox>

                <!-- Support Tickets Table -->
                <TableView fx:id="complaintsTable" prefWidth="850.0" prefHeight="300.0">
                    <columns>
                        <TableColumn fx:id="ticketDescriptionColumn" text="Description" />
                        <TableColumn fx:id="ticketDateColumn" text="Date" />
                    </columns>
                </TableView>

            </VBox>
        </ScrollPane>
    </children>
</AnchorPane>
