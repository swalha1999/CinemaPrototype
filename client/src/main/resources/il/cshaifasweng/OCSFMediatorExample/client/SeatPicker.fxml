<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="859.0" prefWidth="1293.0" stylesheets="@css/SeatsStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.SeatPickerController">
    <children>
        <!-- Seats Grid -->
        <GridPane fx:id="SeatsGrid" hgap="15.0" layoutX="28.0" layoutY="19.0" prefHeight="589.0" prefWidth="943.0" vgap="15.0">
            <!-- Seats will be dynamically added here -->
        </GridPane>

        <!-- Confirm Button -->
        <Button fx:id="confirmButton" layoutX="267.0" layoutY="670.0" onAction="#confirmSelection" prefHeight="50.0" prefWidth="150.0" styleClass="confirm-button" text="Confirm Selection" />

        <!-- Return Button -->
        <Button fx:id="returnBtn" layoutX="502.0" layoutY="670.0" onAction="#returnFunction" prefHeight="50.0" prefWidth="150.0" styleClass="return-button" text="Return" />
    </children>
</AnchorPane>