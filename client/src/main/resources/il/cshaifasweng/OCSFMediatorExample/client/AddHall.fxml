<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="271.0" prefWidth="365.0" stylesheets="@css/AddHall.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.AddHall">
    <!-- ToolBar at the top -->
    <ToolBar styleClass="toolbar">
        <Label styleClass="toolbar-label" text="Add Hall" />
    </ToolBar>

    <!-- GridPane for form inputs -->
    <GridPane hgap="10" layoutX="20" layoutY="50" vgap="10">
        <Label text="Hall Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="hallNameField" promptText="Enter hall name" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   
        <Label text="Number of Seats:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="seatsNumberField" promptText="Enter number of seats" styleClass="text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <!-- Buttons -->
    <Button layoutX="100.0" layoutY="167.0" onAction="#handleConfirm" styleClass="button-confirm" text="Confirm" />
    <Button layoutX="210.0" layoutY="167.0" onAction="#handleBack" styleClass="button-back" text="Back" />
</AnchorPane>
