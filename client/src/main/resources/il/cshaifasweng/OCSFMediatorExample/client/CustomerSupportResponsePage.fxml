<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="587.0" prefWidth="641.0" spacing="20" style="-fx-padding: 30px; -fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.CustomerSupportResponsePage">
    <!-- Header with Contact Us Title -->
    <BorderPane prefHeight="65.0" prefWidth="644.0" stylesheets="@css/ButtonEdit.css">
        <center>
            <AnchorPane prefHeight="100.0" prefWidth="618.0" style="-fx-background-color: #34495E; -fx-padding: 20px;" BorderPane.alignment="CENTER">
                <children>

                    <!-- Welcome Message -->
                    <Label fx:id="userNameLabel" layoutX="33.0" layoutY="27.0" prefHeight="49.0" prefWidth="580.0" style="-fx-font-size: 16px; -fx-text-fill: #ffffff;" text="Respone to [Username]." wrapText="true" />
                </children>
            </AnchorPane>
        </center>
    </BorderPane>

    <!-- Issue Description TextArea -->
    <VBox alignment="CENTER_LEFT" spacing="10">
        <TextArea fx:id="replyDescription" prefHeight="187.0" prefWidth="653.0" style="-fx-font-size: 14px; -fx-padding: 10px;" wrapText="true" />
    </VBox>

    <!-- Submit Button -->
    <Button fx:id="replyBtn" onAction="#handleReply" prefHeight="40.0" prefWidth="120.0" style="-fx-font-size: 16px;" stylesheets="@css/ButtonEdit.css" text="Reply" />
</VBox>
