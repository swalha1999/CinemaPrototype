<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.MainController">
   <left>
      <VBox spacing="10.0" style="-fx-background-color: #B22222;" prefWidth="200.0">
         <Label text="Welcome" style="-fx-text-fill: white; -fx-font-size: 22.0;" />
         <Label text="Admin" style="-fx-text-fill: white; -fx-font-size: 25.0;" />
         <Button text="DashBoard" onAction="#showDashBoard" />
         <Button text="Add Movies" onAction="#showAddMovies" />
         <Button text="Available Movies" onAction="#showAvailableMovies" />
         <Button text="Edit Screening" onAction="#showEditScreening" />
         <Button text="Customers" onAction="#showCustomers" />
         <Button text="Log Out" onAction="#logOut" style="-fx-background-color: #90ee90;" />
      </VBox>
   </left>
   <center>
      <BorderPane fx:id="mainPane" />
   </center>
</BorderPane>
