<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="859.0" prefWidth="1293.0" stylesheets="@css/CinemaInfo.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.CinemaInfo">
    <!-- Header Section -->
    <VBox alignment="CENTER" layoutX="10.0" prefHeight="115.0" prefWidth="1232.0" spacing="15.0">
        <children>
            <Label styleClass="label-header" text="Cinema Information" />
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="HomeBtn" onAction="#returnHome" styleClass="button-nav" text="Home" />
                <Button fx:id="BackBtn" onAction="#returnBack" styleClass="button-nav" text="Back" />
            </HBox>
        </children>
    </VBox>

    <!-- Tables Section -->
    <HBox layoutX="14.0" layoutY="165.0" prefHeight="530.0" prefWidth="1267.0" spacing="20.0">
        <!-- Cinema List Table -->
        <TableView fx:id="cinemaTable" prefHeight="530.0" prefWidth="363.0">
            <columns>
                <TableColumn fx:id="cityColumn" prefWidth="191.0" text="City" />
                <TableColumn fx:id="managerColumn" prefWidth="165.0" text="Manager" />
            </columns>
        </TableView>
         <TableView fx:id="hallTable" prefHeight="530.0" prefWidth="313.0">
             <columns>
                 <TableColumn fx:id="hallName_Col" prefWidth="159.0" text="Hall" />
                 <TableColumn fx:id="seatsColumn" prefWidth="151.0" text="Hall Capacity" />
             </columns>
         </TableView>
      <TableView fx:id="ScreeningTable" prefHeight="530.0" prefWidth="553.0">
        <columns>
          <TableColumn fx:id="MovieName_Col" prefWidth="259.0" text="Movie Name" />
          <TableColumn fx:id="Start_Col" prefWidth="175.0" text="Start" />
            <TableColumn fx:id="End_Col" prefWidth="116.0" text="End" />
        </columns>
      </TableView>
    </HBox>
       <Button fx:id="AddCinemaBtn" layoutX="203.0" layoutY="718.0" onAction="#addCinema" styleClass="button-action" text="Add Cinema" />
       <Button fx:id="EditCinemaBtn" layoutX="62.0" layoutY="718.0" onAction="#editCinema" styleClass="button-action" text="Edit Cinema" />
</AnchorPane>
