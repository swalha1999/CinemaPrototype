<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" stylesheets="@css/AdminAddMovie.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.AdminAddMovieController">
    <children>
      <AnchorPane layoutX="43.0" layoutY="58.0" prefHeight="802.0" prefWidth="200.0">
         <children>
               <ImageView fx:id="movieImageView" fitHeight="218.0" fitWidth="173.0" layoutX="14.0" layoutY="14.0" />
   
               <Label layoutX="16.0" layoutY="322.0" styleClass="form-label" text="Movie Title in english:" />
               <TextField fx:id="titleEnglishField" layoutX="15.0" layoutY="342.0" prefHeight="29.0" prefWidth="173.0" styleClass="form-textfield" />
   
               <Label layoutX="15.0" layoutY="461.0" styleClass="form-label" text="Genre:" />
   
               <Label layoutX="15.0" layoutY="530.0" styleClass="form-label" text="Producer:" />
               <TextField fx:id="producerField" layoutX="15.0" layoutY="550.0" prefHeight="29.0" prefWidth="173.0" styleClass="form-textfield" />
   
               <Button fx:id="insertButton" layoutX="14.0" layoutY="692.0" onAction="#Insert" styleClass="insert-button" text="Insert" />
               <Button fx:id="updateButton" layoutX="123.0" layoutY="692.0" onAction="#Update" styleClass="update-button" text="Update" />
               <Button fx:id="clearButton" layoutX="123.0" layoutY="745.0" onAction="#Clear" prefHeight="27.0" prefWidth="52.0" styleClass="clear-button" text="Clear" />
            <Label layoutX="15.0" layoutY="589.0" prefHeight="20.0" prefWidth="89.0" styleClass="form-label" text="Description:" />
            <TextField fx:id="descriptionField" layoutX="15.0" layoutY="617.0" prefHeight="29.0" prefWidth="173.0" styleClass="form-textfield" />
               <Button fx:id="deleteButton" layoutX="12.0" layoutY="745.0" onAction="#Delete" styleClass="delete-button" text="Delete" />
            <Label layoutX="16.0" layoutY="390.0" styleClass="form-label" text="Movie Title in hebrew:" />
            <TextField fx:id="titleHebrewField" layoutX="15.0" layoutY="410.0" prefHeight="29.0" prefWidth="173.0" styleClass="form-textfield" />
            <ComboBox fx:id="genreComboBox" layoutX="16.0" layoutY="481.0" prefHeight="29.0" prefWidth="173.0" />
            <Label layoutX="24.0" layoutY="254.0" styleClass="form-label" text="Image Url:" />
            <TextField fx:id="imageUrlField" layoutX="15.0" layoutY="274.0" prefHeight="29.0" prefWidth="173.0" styleClass="form-textfield" />
         </children>
      </AnchorPane>

        <!-- Right Side -->
        <TableView fx:id="moviesTable" layoutX="282.0" layoutY="36.0" prefHeight="604.0" prefWidth="896.0">
            <columns>
                <TableColumn fx:id="titleEnglishColumn" prefWidth="201.0" text="Movie Title In English" />
            <TableColumn fx:id="titleHebrewColumn" prefWidth="179.0" text="Movie Title In Hebrew" />
                <TableColumn fx:id="genreColumn" prefWidth="127.0" text="Genre" />
            <TableColumn prefWidth="135.0" text="Producer" />
                <TableColumn fx:id="descriptionColumn" prefWidth="251.0" text="Description" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
