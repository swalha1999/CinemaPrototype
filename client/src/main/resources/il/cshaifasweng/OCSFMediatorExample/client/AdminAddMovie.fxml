<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.AdminAddMovieController" stylesheets="@css/AdminAddMovie.css">
    <children>
        <!-- Left Side -->
        <VBox layoutX="50.0" layoutY="50.0" spacing="10.0">
            <ImageView fx:id="movieImageView" fitHeight="150.0" fitWidth="100.0" />
            <Button fx:id="importButton" text="Import" styleClass="import-button" />

            <Label text="Movie Title:" styleClass="form-label"/>
            <TextField fx:id="titleField" styleClass="form-textfield"/>

            <Label text="Genre:" styleClass="form-label"/>
            <TextField fx:id="genreField" styleClass="form-textfield"/>

            <Label text="Duration:" styleClass="form-label"/>
            <TextField fx:id="durationField" styleClass="form-textfield"/>

            <Label text="Showing Date:" styleClass="form-label"/>
            <DatePicker fx:id="showingDatePicker" styleClass="form-datepicker"/>

            <Button fx:id="insertButton" text="Insert" styleClass="insert-button"/>
            <Button fx:id="updateButton" text="Update" styleClass="update-button"/>
            <Button fx:id="deleteButton" text="Delete" styleClass="delete-button"/>
            <Button fx:id="clearButton" text="Clear" styleClass="clear-button"/>
        </VBox>

        <!-- Right Side -->
        <TableView fx:id="moviesTable" layoutX="400.0" layoutY="50.0" prefHeight="400.0" prefWidth="350.0">
            <columns>
                <TableColumn fx:id="titleColumn" text="Movie Title" prefWidth="100.0"/>
                <TableColumn fx:id="genreColumn" text="Genre" prefWidth="100.0"/>
                <TableColumn fx:id="durationColumn" text="Duration" prefWidth="75.0"/>
                <TableColumn fx:id="showingDateColumn" text="Showing Date" prefWidth="75.0"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
