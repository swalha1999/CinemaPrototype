<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="850.0" prefWidth="600.0" style="-fx-background-color: #bdc3c7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.EditPrice">
   <children>
      <BorderPane prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #34495E;">
         <center>
            <Label text="Edit Price" textFill="WHITE" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Bell MT Bold" size="32.0" />
               </font>
            </Label>
         </center>
      </BorderPane>
      <TextField fx:id="PriceText" layoutX="229.0" layoutY="98.0" prefHeight="34.0" prefWidth="180.0" promptText="Enter Price" />
      <Label layoutX="119.0" layoutY="103.0" text="New Price :">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="confirmButton" layoutX="166.0" layoutY="172.0" mnemonicParsing="false" onAction="#onConfirmButton" prefHeight="34.0" prefWidth="99.0" style="-fx-background-color: #34495e;" text="Confirm" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="returnBtn" layoutX="356.0" layoutY="172.0" mnemonicParsing="false" onAction="#onReturn" prefHeight="34.0" prefWidth="99.0" style="-fx-background-color: #34495e;" text="Return" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
