<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controllers.SupportPage"
      style="-fx-padding: 20px; -fx-background-color: #f4f4f4;">

    <!-- Title -->
    <Label text="Support" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Welcome Message -->
    <Label text="Hi [Username], how can we assist you today?" wrapText="true" style="-fx-font-size: 16px;" fx:id="welcomeMessage"/>

    <!-- Issue Description -->
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Describe your issue:" />
        <TextArea fx:id="issueDescription" promptText="Please describe the issue you're facing" prefHeight="150" />
    </VBox>

    <!-- Submit Button -->
    <Button text="Submit" fx:id="submitButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" onAction="#handleSubmit" />

    <!-- Contact Info -->
    <Label text="Or contact us at: support@cinema.com" style="-fx-font-size: 12px;" />

</VBox>
